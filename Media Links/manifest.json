{
   "background": {
      "service_worker": "background.js"
   },
   "content_scripts": [
      {
         "matches": ["<all_urls>"],
         "js": ["theme-manager.js", "settings-utils.js", "content.js"],
         "run_at": "document_start"
      },
      {
         "matches": ["*://www.imdb.com/*"],
         "js": ["customized-views.js", "imdb-customized-views.js", "imdb-cast-copy.js", "comparison.js"],
         "run_at": "document_end"
      },
      {
         "matches": ["*://*.wikipedia.org/*"],
         "js": ["theme-manager.js", "settings-utils.js", "customized-views.js", "wiki-cast-copy.js", "wiki-customized-views.js", "comparison.js"],
         "run_at": "document_end"
      },
      {
         "matches": ["*://letterboxd.com/*"],
         "js": ["letterboxd-cast-copy.js"],
         "run_at": "document_end"
      },
      {
         "matches": ["*://tv.apple.com/*", "file:///*"],
         "js": ["appletv-cast-copy.js"],
         "run_at": "document_end"
      },
      {
         "matches": ["https://www.cbfcindia.gov.in/cbfcAdmin/search-film.php*"],
         "js": ["cbfc-fix.js", "cbfc-ocr.js"],
         "run_at": "document_end"
      },
      {
         "matches": ["*://*.bookmyshow.com/movies/*"],
         "js": ["bookmyshow-copy.js"],
         "run_at": "document_end"
      },
      {
         "matches": ["*://www.hotstar.com/*"],
         "js": ["hotstar-auto-view-more.js", "hotstar-episode-copy.js", "hotstar-show-title-copy.js"],
         "run_at": "document_end"
      },
      {
         "matches": ["*://www.airtelxstream.in/*"],
         "js": ["airtelxstream-episode-copy.js"],
         "run_at": "document_end"
      }
   ],
   "commands": {
      "_execute_sidebar_action": {
         "description": "Open Media Links sidebar",
         "suggested_key": {
            "default": "Alt+M",
            "mac": "Alt+M"
         }
      }
   },
   "content_security_policy": {
      "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com; worker-src 'self' blob:;"
   },
   "description": "Navigate IMDb and Letterboxd with a sidebar",
   "host_permissions": [ "https://www.imdb.com/", "https://letterboxd.com/", "https://www.cbfcindia.gov.in/", "https://*.wikipedia.org/", "https://tv.apple.com/", "https://*.bookmyshow.com/", "https://www.hotstar.com/", "https://www.airtelxstream.in/" ],
   "key": "",
   "manifest_version": 3,
   "name": "Media Links",
   "permissions": [ "activeTab", "sidePanel", "scripting", "storage", "contextMenus", "offscreen", "tabs" ],
   "side_panel": {
      "default_path": "sidebar.html",
      "default_width": 300
   },
   "sandbox": {
      "pages": ["sandbox.html"]
   },
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "0.810",
   "web_accessible_resources": [
      {
         "resources": ["tesseract-worker.min.js", "tesseract-core.wasm.js", "tesseract.min.js", "lang-data/*", "sandbox.html", "offscreen.html", "consolidated-view-page.html", "consolidated-view-page.js", "comparison-view-page.html", "comparison-view-page.js", "customized-views.js", "theme-manager.js", "settings-utils.js", "hotstar-episode-copy.js", "hotstar-show-title-copy.js", "airtelxstream-episode-copy.js"],
         "matches": ["<all_urls>"],
         "use_dynamic_url": true
      }
   ]
}
